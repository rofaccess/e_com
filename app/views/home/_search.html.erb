<%= search_form_for @q, url: home_index_path do |f| %>
  <div class="field has-addons">
    <div class="control">
      <%= f.search_field :name_or_product_categories_name_cont, autofocus: true, placeholder: "Type product or category name", class: "input" %>
    </div>
    <div class="control">
      <%= button_tag(type: 'submit', class: 'button is-link') do %>
        <span class="icon">
          <i class="fas fa-search"></i>
        </span>
      <% end %>
    </div>
  </div>
<% end %>
