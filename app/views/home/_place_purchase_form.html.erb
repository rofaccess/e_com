<%= form_for(SaleOrder.new) do |f| %>
  <div class="field has-addons">
    <div class="control">
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.text_field :quantity, type: :number, value: 1, class: "input", required: true, min: 1 %>
    </div>
    <div class="control">
      <%= button_tag(type: 'submit', class: 'button is-primary') do %>
        <span>Comprar</span>
        <span class="icon">
          <i class="fas fa-cart-shopping"></i>
        </span>
      <% end %>
    </div>
  </div>
<% end %>
