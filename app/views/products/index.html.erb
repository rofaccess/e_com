<%= link_to new_product_path, class: "button is-primary" do %>
  <span class="icon">
    <i class="fas fa-plus"></i>
  </span>
  <span>New Product</span>
<% end %>
<hr>

<div class="table-container">
  <table class="table is-fullwidth">
    <tr>
      <th>Name</th>
      <th class="has-text-right">Price</th>
      <th>Created by</th>
      <th></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td class="has-text-right"><%= product.price %></td>
        <td><%= product.created_by_name %></td>
        <td class="has-text-right">
          <div class="field is-grouped is-pulled-right">
            <p class="control">
              <%= link_to product, title: "Show", class: "button is-small" do %>
                <span class="icon">
                  <i class="fas fa-eye"></i>
                </span>
              <% end %>
            </p>
            <p class="control">
              <%= link_to edit_product_path(product), title: "Edit", class: "button is-small" do %>
                <span class="icon">
                  <i class="fas fa-pen-to-square"></i>
                </span>
              <% end %>
            </p>
            <p class="control">
              <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete", class: "button is-small is-danger is-outlined" do %>
                <span class="icon">
                  <i class="fas fa-trash"></i>
                </span>
              <% end %>
            </p>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>
